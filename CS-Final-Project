	float findHighest(float g1, float g2, float g3, float g4, float g5){
		if (g2<g1 && g3< g1 && g4<g1 && g5<g1){
			cout<<"Highest: Math";
		}
		else if (g1<g2 && g3< g2 && g4<g2 && g5<g2){
			cout<<"HIGHEST: SCIENCE";
		}
		else if (g1<g3 && g2< g3 && g4<g3 && g5<g3){
			cout<<"HIGHEST: English ";
		}
		else if (g1<g4 && g2< g4 && g3<g4 && g5<g4){
			cout<<"HIGHEST: history";
		} 
		else (g1<g5 && g2< g5 && g3<g5 && g4<g5){
			cout<<"HIGHEST: SCIENCE";
		}
		
	}
	
	float findLowest(float g1, float g2, float g3, float g4, float g5)
